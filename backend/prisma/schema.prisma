// 1
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 2
generator client {
  provider = "prisma-client-js"
}

model Link {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  description String
  url         String
  postedBy    User?    @relation(fields: [postedById], references: [id])
  postedById  Int?
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  links    Link[]
}

model Trail {
  id        Int    @id @default(autoincrement())
  name      String
  latitude  String
  longitude String
  fee       String
  water     String
  bathrooms String
  manager   String
}

model Climb {
  id             Int    @id @default(autoincrement())
  description    String
  protection     String
  left_right_seq String
  mp_sector_id   String
  latitude       String
  longitude      String
  route_name     String
  first_ascent   String
  location       String
  yds            String
  parent_sector  String
  mp_route_id    String
}
